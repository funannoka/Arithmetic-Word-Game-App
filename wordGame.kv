                on_release:
                    app.endGame()
                    app.root.current = "done"
                text: "Quit"
                font_size:25  
                font_name: 'ARCADE.TTF' 
                markup: True
                pos_hint:{'center_x':0.85, 'center_y':0.15} 
            #size_hint:0.125,0.1 
                size_hint:0.1,0.07
                color:1,0,0,1


