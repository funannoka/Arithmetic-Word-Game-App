<StartScreen>:
    name: "start"
    FloatLayout:
        #TotalPointsLabel
        Label:
            text: 'Arithmetic Word Game'
            font_name:  'neuropol x rg'    # ARCADE.TTF
            markup: True
            font_size: 0.05*root.width#40#'40sp'
            pos: root.right-self.width,root.top-self.height+(root.top/2.5)
            #pos_hint:{'right':0.85, 'top':0.85}  
            #size_hint:0.3,0.2 
            color: 1,0,1,1

        Button:   #ff3333  3333ff
            id: btn
            on_press: 
                app.setAllBtnTxt()
                app.root.current = "slevel"
            text: u'[color=ffffff]Start [/color][color=ff3333][b]Game[/b][/color]'
            font_name: '6809 chargen.ttf'
            markup: True
            unichr:2764
            size: self.texture_size
            font_size: 0.04375*root.width #35 #30#'30sp'0.0375
            pos_hint:{'right':0.645, 'top':0.645}  
            size_hint:0.3,0.2 
            #color: 1,0,1,1
        Button:
            on_release:
                app.get_running_app().stop()
            text: "X"
            font_size:0.01875*root.width#15  
            font_name: '6809 chargen.ttf' 
            markup: True
            unichr:2764
            size: self.texture_size
            pos_hint:{'right':1-0.02,'top':1-0.01} 
            size_hint:0.07,0.07 
            color:1,0,1,1


<SelLevelScreen>:
    name: "slevel"
    FloatLayout:
        TotalPointsLabel
        Button:
            on_release:
                app.gridsize=4
                app.reqNumSentence = 1
                app.collectGridImages()
